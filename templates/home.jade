extends ./index.jade

block styles
 //- Main Stylesheet
 link(rel="stylesheet" href="../../styles/main.css")
    

append header

 .chip
      - var availableLocales = locales.filter(x => x  !== locale && !!lang(x));
      if availableLocales    
        each lc, index in availableLocales
         a(href=`/${lang(lc).path}`)
          svg(style="width:24px;height:24px" viewBox="0 0 24 24")
              path(fill="#000000" d="M12.87,15.07L10.33,12.56L10.36,12.53C12.1,10.59 13.34,8.36 14.07,6H17V4H10V2H8V4H1V6H12.17C11.5,7.92 10.44,9.75 9,11.35C8.07,10.32 7.3,9.19 6.69,8H4.69C5.42,9.63 6.42,11.17 7.67,12.56L2.58,17.58L4,19L9,14L12.11,17.11L12.87,15.07M18.5,10H16.5L12,22H14L15.12,19H19.87L21,22H23L18.5,10M15.88,17L17.5,12.67L19.12,17H15.88Z")
    
block content


 .container

   section.row
    .col.s12
     h2.visible= __('You need ')  
      span#headWords

   section.row#infoPopout
    .col.s12.m8.push-m2
     ul.collapsible.popout
      li: each article in collections.articles_en
       article.content-article
        .collapsible-header.center-align
          span article.title
          span.timestamp= moment(article.date).format("MMMM Do YYYY")
        .collapsible-body: i.material-icons
          a(href='/' + article.path)= article.title
     
   section.row#contactRow
    .col.s12
     .fixed-action-btn.waves-effect.waves-light#contactImage
      a(href="#"): img(src="../../images/CH-round.png", alt="Charles-Henri Decultot")

      ul#contactUl
       li: a.btn-floating#aboutButton: i.material-icons person_pin
       li: a.btn-floating#phoneButton: i.material-icons call
       li: a.btn-floating#messageButton: i.material-icons message

   section.row#contactForm
    form.col.s12.card(action="/" method="post")
     .card-content.center-align
      span.card-title= __('Let\'s Work Together')
      .row
       .input-field.col.s12.m4
        input.validate(placeholder=__("Your Name"), id ="name", name = "name", type="text")
       .input-field.col.s12.m4
        input.validate(placeholder=__("Your Phone Number"), id ="phone", name = "phone", type="tel")
       .input-field.col.s12.m4
        input.validate(placeholder=__("Your Email"), id ="email", name = "email", type="email")
        input(id ="website", name="website", type = "text", value="")
      .row
       .input-field.col.s12
        input.materialize-textarea(placeholder=__("So, what\'s this projet ?"), name = "textarea", id ="textarea")
     .card-action.center-align
      .row
       .col.s3
        button.btn.waves-effect.waves-light(type="submit", name="action") Submit

   section.row#phoneNumber
    .col.s12.m6.push-m3.card
     .center-align
      span.card-title=__('Don\'t Hesitate To Call Me')
      p +33 (0)6 33 47 58 69

   secion.row#aboutMe
    .col.s12.m6.push-m3.card
     .center-align
      span.card-title=__('aboutMe-title')
      .card-content 
       p=__('aboutMe-p1')
       br
       p=__('aboutMe-p2')
       //br
       //p=__('aboutMe-p3')

block scripts

    //- Malarkey
    script(type="text/javascript" src="../../scripts/malarkey.min.js")
    
    //- Main JS file
    script(type="text/javascript" src="../../scripts/main.js")

