extends ./index.jade

block styles
  //- Main Stylesheet
  link(rel="stylesheet" href="../../../styles/main.css")


append header

 .chip
      - var lc = locales.filter(x => x  === locale && !!lang(x));
        
         if lc == "fr" 
          a(href='/' + lc)
           svg(style="width:24px;height:24px" viewBox="0 0 24 24")
              path(fill="#000000" d="M5,13L9,17L7.6,18.42L1.18,12L7.6,5.58L9,7L5,11H21V13H5M21,6V8H11V6H21M21,16V18H11V16H21Z")          
         else 
          a(href='/')
           svg(style="width:24px;height:24px" viewBox="0 0 24 24")
              path(fill="#000000" d="M5,13L9,17L7.6,18.42L1.18,12L7.6,5.58L9,7L5,11H21V13H5M21,6V8H11V6H21M21,16V18H11V16H21Z")
         
              
block content


  .container
   section.row#article
    .col.s12
     .card
      .card-image
       img(src= image)
       span.card-title= title
       
      .card-content
       .row#blogNav
        #blogHeader
         img#logo.circle(src= logo, alt= author)
         #blogInfo
          strong= author
          br
          span= moment(date).locale(`${locale}`).format("LL")
        #socialSharing.fixed-action-btn.waves-effect.waves-light.horizontal.click-to-toggle
          a(href='#'): i.material-icons share
          ul
           -var myUrl = '/' + path;
           li#fbButton: a(href='https://www.facebook.com/dialog/share?app_id=145634995501895&display=popup&href=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2F&redirect_uri=https%3A%2F%2Fdevelopers.facebook.com%2Ftools%2Fexplorer'): i: img(src="../../../images/facebook-48x48.png" srcset="../../../images/facebook-24x24.png 1x, ../../../images/facebook-48x48.png 2x" alt="Facebook Logo")
           li: a(href='#'): i: img(src="../../../images/Google+-48x48.png" srcset="../../../images/Google+-24x24.png 1x, ../../../images/Google+-48x48.png 2x" alt="Google+ Logo")     
           li: a(href='#'): i: img(src="../../../images/Twitter-48x48.png" srcset="../../../images/Twitter-24x24.png 1x, ../../../images/Twitter-48x48.png 2x" alt="Twitter Logo")
           li: a(href='https://www.linkedin.com/shareArticle?mini=true&url='+myUrl+'&title='+title+'&summary='+preview+'&source=Charles-Henri Decultot'): i: img(src="../../../images/Linkedin-48x48.png" srcset="../../../images/Linkedin-24x24.png 1x, ../../../images/Linkedin-48x48.png 2x" alt="LinkedIn Logo")  
       
       .row 
        #blogContent
         article!= contents
      
block scripts
    
    //- Malarkey
    script(type="text/javascript" src="../../../scripts/malarkey.min.js")
    
    //- Main JS file
    script(type="text/javascript" src="../../../scripts/main.js")

