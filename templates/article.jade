extends ./index.jade

block styles
  //- Main Stylesheet
  link(rel="stylesheet" href="../../../styles/main.css")

  //-Favicon
  link(rel='shortcut icon' href='../../../favicon.ico' type='image/x-icon')

append header

 .chip
      - var lc = locales.filter(x => x  === locale && !!lang(x));
        
         if lc == "fr" 
          a(href='/' + lc)
           svg(style="width:24px;height:24px" viewBox="0 0 24 24")
              path(fill="#000000" d="M5,13L9,17L7.6,18.42L1.18,12L7.6,5.58L9,7L5,11H21V13H5M21,6V8H11V6H21M21,16V18H11V16H21Z")          
         else 
          a(href='/')
           svg(style="width:24px;height:24px" viewBox="0 0 24 24")
              path(fill="#000000" d="M5,13L9,17L7.6,18.42L1.18,12L7.6,5.58L9,7L5,11H21V13H5M21,6V8H11V6H21M21,16V18H11V16H21Z")
         
              
block content


  .container
   section.row#article
    .col.s12
     .card
      .card-image
       img(src= image)
       span.card-title= title
       
      .card-content
       .row#blogNav
        #blogHeader
         img#logo.circle(src= logo, alt= author)
         #blogInfo
          strong= author
          br
          span= moment(date).locale(`${locale}`).format("LL")
        #socialSharing.fixed-action-btn.waves-effect.waves-light.horizontal.click-to-toggle
          a(href='#'): i.material-icons share
          
          ul
           -var myUrl = encodeURIComponent('https://www.chdecultot.com/' + path);
           li: a(href='https://www.facebook.com/sharer/sharer.php?u='+myUrl, onclick="javascript:window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;"): i: img(src="../../../images/facebook-48x48.png" srcset="../../../images/facebook-24x24.png 1x, ../../../images/facebook-48x48.png 2x" alt="Facebook Logo")
           li: a(href='https://plus.google.com/share?url='+myUrl, onclick="javascript:window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;"): i: img(src="../../../images/Google+-48x48.png" srcset="../../../images/Google+-24x24.png 1x, ../../../images/Google+-48x48.png 2x" alt="Google+ Logo")     
           li: a(href='https://twitter.com/intent/tweet?text='+title+'url='+myUrl, onclick="javascript:window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;"): i: img(src="../../../images/Twitter-48x48.png" srcset="../../../images/Twitter-24x24.png 1x, ../../../images/Twitter-48x48.png 2x" alt="Twitter Logo")
           li: a(href='https://www.linkedin.com/shareArticle?mini=true&url='+myUrl+'&title='+title+'&summary='+preview+'&source=Charles-Henri Decultot', onclick="javascript:window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;"): i: img(src="../../../images/Linkedin-48x48.png" srcset="../../../images/Linkedin-24x24.png 1x, ../../../images/Linkedin-48x48.png 2x" alt="LinkedIn Logo")  
       
        #blogContent
          article!= contents

       .row
        div(id="disqus_thread")
        script.
        
         var disqus_config = function () {
              this.page.url = myUrl;
              this.page.identifier = id; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
         };
        
         (function() { // DON'T EDIT BELOW THIS LINE
              var d = document, s = d.createElement('script');
              s.src = '//chdecultot.disqus.com/embed.js';
              s.setAttribute('data-timestamp', +new Date());
              (d.head || d.body).appendChild(s);
              })();
        noscript.
         Please enable JavaScript to view the: a(href="https://disqus.com/?ref_noscript") comments powered by Disqus.
         
block scripts
    
    //- Malarkey
    script(type="text/javascript" src="../../../scripts/malarkey.min.js")
    
    //- Main JS file
    script(type="text/javascript" src="../../../scripts/main.js")

    //- Disqus count
    script(id="dsq-count-scr" src="//chdecultot.disqus.com/count.js" async)
    
